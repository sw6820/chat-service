{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
//    "noEmit": false,
//    "emitDeclarationOnly": false,
//    "removeComments": true,
//    "emitDecoratorMetadata": true,
//    "experimentalDecorators": true,
//    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": false,
    "esModuleInterop": true,
//    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "incremental": false,
  },
  "include": ["src/**/*.ts", "src/**/*"],
  "exclude": [
    "node_modules",
    "tests",
    "dist",
    "**/*spec.ts",
  ]
}
